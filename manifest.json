{
    "manifest_version": 2,
    "author": "Mole",
    "version": "1.0",
    "name": "Telegram links replacer",
    "description": "Replace t.me with the link mirror site tlinks.run",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Re:Telegram"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["tlinks.js"]
      }
    ]
}
